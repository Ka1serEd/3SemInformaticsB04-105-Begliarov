#include <iostream>
#include <cmath>
using namespace std;

int main()
{
    //Упражнение 4
    int x, y;
    cout << "x = ";
    cin >> x;
    cout << "y = ";
    cin >> y;
    x=x+y;
    y=x-y;
    x=x-y;
    cout << "x = " << x << " " << "y = " << y << endl;
    // Упражнение 3 
    double a, b, c;
    cout << "ax^2+bx+c=0, введите a, b, c" << endl;
    cin >> a >> b >> c;
    double D = b*b - 4*a*c;
    if (a=0) {
        cout << "x_0 = "<< -b/c;
    }
    else if (D<0) {
        cout << "Решений нет";
        return 0;
    }
    else if (D=0) {
        cout << "x_0 = "<< (-1)*b/(2*a);
    }
    else if {
        cout << "x_1 =" << ((-1)*b+sqrt(D))/(2*a) << " x_2 =" <<((-1)*b-sqrt(D))/(2*a);
    }
    return 0;
}
