    double a, b, c;
    cout << "ax^2+bx+c=0, введите a, b, c" << endl;
    cin >> a >> b >> c;
    double D = b*b - 4*a*c;
    if (a==0) {
        double q=-c/b;
        cout << q;
    }
    else if (D<0) {
        cout << "Решений нет";
    }
    else if (D==0) {
        cout << "x_0 = "<< (-1)*b/(2*a);
    }
    else if (D>0) {
        cout << "x_1 = " << ((-1)*b + sqrt(D))/(2*a) << " x_2 = " <<((-1)*b-sqrt(D))/(2*a);
    }
    // Упражнение 2 
    
